    User btyeh
    ControlMaster auto
    ControlPersist yes

Host sherlock
    HostName login.sherlock.stanford.edu
    User bentyeh

Host sherlock login.sherlock.stanford.edu sh-ln0?.stanford.edu
    ControlMaster auto
    ControlPersist yes

Host *
    ControlPath ~/.ssh/%l%r@%h:%p
